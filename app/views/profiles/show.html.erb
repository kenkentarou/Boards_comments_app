<% content_for(:title, 'プロフィール') %>
<div class='container pt-3'>
  <div class='row'>
    <div class='col-md-10 offset-md-1'>
      <h1 class='float-left mb-5'><%= t('.profiles') %></h1>
      <%= link_to '編集', edit_profile_path, class: 'btn btn-success float-right' %>
      <table class='table'>
        <tbody>
        <tr>
          <th scope='row'>
            <span>
              <%= t('.email') %>
            </span>
          </th>
          <td><%= current_user.email %></td>
        </tr>
        <tr>
          <th scope='row'>
            <span>
              <%= t('.name') %>
            </span>
          </th>
          <td><%= current_user.decorate.full_name %></td>
        </tr>
        <tr>
          <th scope='row'>
            <span>
              <%= t('.profiles_image') %>
            </span>
          </th>
          <td><%= image_tag current_user.user_image.url, class: 'rounded-circle', size: '100x100' %></td>
        </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>