<% content_for(:title, 'プロフィール編集') %>
<div class='container'>
  <div class='row'>
    <div class='col-lg-8 offset-lg-2'>
      <h1><%= t('.profiles_edit') %></h1>
      <%= form_with(model: current_user, url: profile_path, local: true) do |form| %>

        <div class='form-group'>
          <label for='user_email'><%= User.human_attribute_name(:email) %></label>
          <%= form.email_field :email, class: 'form-control', id: 'user_email' %>
        </div>
        <div class='form-group'>
          <label for='user_last_name'><%= User.human_attribute_name(:last_name) %></label>
          <%= form.text_field :last_name, class: 'form-control', id: 'user_last_name' %>
        </div>
        <div class='form-group'>
          <label for='user_first_name'><%= User.human_attribute_name(:first_name) %></label>
          <%= form.text_field :first_name, class: 'form-control', id: 'user_first_name' %>
        </div>
        <%= form.file_field :user_image, class: 'form-control', id: 'js-user-img' %>
        <div class='mt-3 mb-3'>
          <%= image_tag current_user.user_image.url, class: 'rounded-circle', id: 'js-img-prev', size: '100x100' %>
        </div>
        <%= form.submit t('.update'), class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>