<% content_for(:title, 'プロフィール編集') %>
<div class='container'>
  <div class='row'>
    <div class='col-lg-8 offset-lg-2'>
      <h1><%= t('.profiles_edit') %></h1>
      <%= form_with(model: @user, url: profile_path, local: true) do |f| %>
        <%= render 'shared/errors_messages', model: f.object %>
        <div class='form-group'>
          <%= f.label :email %>
          <%= f.email_field :email, class: 'form-control' %>
        </div>
        <div class='form-group'>
          <%= f.label :last_name %>
          <%= f.text_field :last_name, class: 'form-control' %>
        </div>
        <div class='form-group'>
          <%= f.label :first_name %>
          <%= f.text_field :first_name, class: 'form-control' %>
          <%= f.hidden_field :user_image_cache %>
        </div>
        <%= f.file_field :user_image, class: 'form-control', id: 'js-common-img' %>
        <div class='mt-3 mb-3'>
          <%= image_tag current_user.user_image.url, class: 'rounded-circle', id: 'js-img-prev', size: '100x100' %>
        </div>
        <%= f.submit t('.update'), class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>