<div class="wrapper">
  <div class="container">
    <div class="row">
      <div class="offset-md-4 col-md-4 user-contents-container text-center">
        <h2><%= @user.decorate.full_name %></h2>
        <div class="user-image">
          <%= image_tag(@user.user_image.url, class: 'rounded-circle mr15', width: '40', height: '40') %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="wrapper">
  <div class="offset-md-4 col-md-6">
    <h2>[<%= @user.decorate.full_name %>さんの投稿]</h2>
  </div>
  <div class="wrapper">
    <div class="offset-md-4 col-md-12">
      <%= render partial: 'boards/board', collection: @user.boards %>
      </div>
    </div>
  </div>
</div>