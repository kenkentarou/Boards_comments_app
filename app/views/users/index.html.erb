<div class="wrapper">
  <div class="users-container">
    <div class="row">
      <div class="offset-md-3 col-md-6 users-list-container">
        <% @users.each do |user| %>
          <div class="users-list-card col-md-4 d-flex justify-content-between">
            <%= image_tag(user.user_image.url, class: 'rounded-circle mr15', width: '40', height: '40') %>
            <p><%= link_to "#{user.decorate.full_name}",user_path(user.id), class: 'text-success font-weight-bold' %></p>
          </div>
          <hr>
        <% end %>
      </div>
    </div>
  </div>
</div>
