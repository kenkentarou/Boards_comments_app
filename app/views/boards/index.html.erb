<% content_for(:title, '投稿一覧') %>
<div class='container pt-3'>
  <div class='row'>
    <div class='col-lg-10 offset-lg-1'>
      <!-- 検索フォーム -->
      <%= render 'search_form', url: boards_path, search: @search %>
    </div>
  </div>
  <!-- 投稿一覧 -->
  <div class='row'>
    <div class='col-12'>
      <div class='row'>
        <% if @boards.empty? %>
          <%= '投稿はありません' %>
        <% else %>
          <%= render @boards %>
        <% end %>
      </div>
      <%= paginate @boards %>
    </div>
  </div>
</div>
