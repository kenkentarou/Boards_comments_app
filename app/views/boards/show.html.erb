<% content_for :title do %>
  掲示板のタイトル/RUNTEQ NORMAL APP
<% end %>
<div class='container pt-5'>
  <div class='row mb-3'>
    <div class='col-lg-8 offset-lg-2'>
      <h1>掲示板詳細</h1>
      <!-- 掲示板内容 -->
      <article class='card'>
        <div class='card-body'>
          <div class='row'>
            <div class='col-md-3'>
              <%= image_tag('sample.jpg', class: 'card-img-top img-fluid', size: '300x200') %>
            </div>
            <div class='col-md-9'>
              <h3 style='display: inline;'><%= @board.title %></h3>
              <ul class='list-inline'>
                <li class='list-inline-item'>by <%= @board.user_id %></li>
                <li class='list-inline-item'>2<%= l @board.created_at, format: :short %></li>
              </ul>
            </div>
          </div>
          <p><%= @board.body %></p>
        </div>
      </article>
    </div>
  </div>
</div>
<div class='container pt-5'>
  <%= render 'comments/comment_form' %>
</div>
<div class='container pt-5'>
  <%= render 'comments/comment_area' %>
</div>
