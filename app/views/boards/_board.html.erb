
<div class='col-sm-12 col-md-6 col-lg-4 mb-3'>
  <div id='product-id-33'>
    <div class='card'>
      ã€€<%= image_tag("#{board.board_image}", class: 'card-img-top', size: '300x200') %>
      <div class='card-body'>
        <h4 class='card-title'>
          <%=link_to board.title, '#' %>
        </h4>
        <div class='d-inline float-right'>
          <%= link_to '#', id: 'bookmark-link', 'data-remote': true, rel: 'nofollow', method: :post do %>
