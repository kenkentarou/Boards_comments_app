
<div class='col-sm-12 col-md-6 col-lg-4 mb-3'>
  <div id=<%= "product-id-#{board.id}" %>>
    <div class='card'>
      　<%= image_tag("#{board.board_image}", class: 'card-img-top', size: '300x200') %>
      <div class='card-body'>
        <h4 class='card-title'>
          <%= link_to board.title, board_path(board.id) %>
        </h4>
        <div class='d-inline float-right'>
          <% if board.user_id == current_user.id %>
            <%= link_to edit_board_path(board.id) do %>
              <i class='fa fa-pencil'></i>
            <% end %>
            <%= link_to board_path(board.id), data: {confirm: '本当に実行して大丈夫ですか?'}, method: :delete do %>
              <i class='fa fa-trash'></i>
            <% end %>
          <% else %>
            <%= link_to '#', id: 'bookmark-link', 'data-remote': true, rel: 'nofollow', method: :post do %>
              <i class='fa fa-star-o'></i>
            <% end %>
          <% end %>
        </div>

        <ul class='list-inline'>
          <li class='list-inline-item'>
            <i class='fa fa-user'></i>
            <%= board.user_id %>
          </li>
          <li class='list-inline-item'>
            <i class='fa fa-calendar'></i>
            <%= l board.created_at, format: :short %>
          </li>
        </ul>
        <p class='card-text'><%= board.body %></p>
      </div>
    </div>
  </div>
</div>
