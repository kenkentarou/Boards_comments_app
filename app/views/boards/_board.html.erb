          <% end %>
        </div>

        <ul class='list-inline'>
          <li class='list-inline-item'>
            <i class='fa fa-user'></i>
            <%= board.user_id %>
          </li>
          <li class='list-inline-item'>
            <i class='fa fa-calendar'></i>
            <%= l board.created_at, format: :short %>
          </li>
        </ul>
        <p class='card-text'><%= board.body %></p>
      </div>
    </div>
  </div>
</div>
