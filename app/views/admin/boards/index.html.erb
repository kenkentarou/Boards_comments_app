<div class="content-wrapper">
  <div class="container mb-5 pt-2">
    <h1>投稿一覧</h1>
    <div class="row">
      <div class="col-md-12 mb-3">
        <%= search_form_for @search, url: admin_boards_path do |f| %>
          <div class="row">
            <div class="form-inline align-items-center mx-auto">
              <div class="col-auto">
                <%= f.search_field :title_or_body_cont, placeholder: "検索ワード", class: 'form-control' %>
              </div>
              <div class="col-auto">
                <%= f.date_field :created_at_gteq, class: 'form-control' %>
                <span>〜</span>
                <%= f.date_field :created_at_lteq_end_of_day, class: 'form-control' %>
              </div>
              <div class="col-auto">
                <%= f.submit value: "検索", class: 'btn btn-primary' %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-12">
        <table class="table table-striped">
          <thead>
          <tr>
            <th scope="col">Id</th>
            <th scope="col">タイトル</th>
            <th scope="col">作成者</th>
            <th scope="col">作成日時</th>
            <th scope="col"></th>
          </tr>
          </thead>
          <%= render @boards %>
        </table>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-12">
        <%= paginate @boards %>
      </div>
    </div>
  </div>
</div>