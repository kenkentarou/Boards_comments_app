<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <%= render 'shared/flash_message' %>
  <div class="container">
    <div class="row">
      <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
        <h1>掲示板詳細</h1>
        <div class="text-right mb-3">
          <%= link_to '編集', edit_admin_board_path(@board.id), class: 'btn btn-success' %>
          <%= link_to '削除', admin_board_path(@board.id), class: 'btn btn-danger', data: {confirm: '本当に実行して大丈夫ですか?'}, method: :delete %>
        </div>
        <table class="table table-bordered bg-white">
          <tr>
            <th scope="row">Id</th>
            <td><%= @board.id %></td>
          </tr>
          <tr>
            <th scope="row">タイトル</th>
            <td><%= @board.title %></td>
          </tr>
          <tr>
            <th scope="row">作成者</th>
            <td><%= @board.user.decorate.full_name %></td>
          </tr>
          <tr>
            <th scope="row">本文</th>
            <td><%= @board.body %></td>
          </tr>
          <tr>
            <th scope="row">作成日時</th>
            <td><%= l @board.created_at, format: :short %></td>
          </tr>
        </table>
      </div>
    </div>
  </div>
</div>