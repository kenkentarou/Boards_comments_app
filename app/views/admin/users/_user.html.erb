<tbody>
<tr>
  <td>
    <%= user.id %>
  </td>
  <td>
    <%= link_to admin_user_path(user.id) do %>
      <%= user.last_name %> <%= user.first_name %>
    <% end %>
  </td>
  <td>
    <%= user.role_i18n %>
  </td>
  <td>
    <%= l user.created_at, format: :short %>
  </td>
  <td>
    <%= link_to '編集', edit_admin_user_path(user), class: 'btn btn-success' %>
    <%= link_to '削除', admin_user_path(user), class: 'btn btn-danger', data: {confirm: '本当に実行して大丈夫ですか?'}, method: :delete %>
  </td>
</tr>
</tbody>