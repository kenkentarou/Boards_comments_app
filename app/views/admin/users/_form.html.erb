<%= form_with model: user, url: admin_user_path, local: true do |form| %>
  <%= render 'shared/errors_messages', model: form.object %>
  <div class='form-group'>
    <label for='user_email'><%= User.human_attribute_name(:email) %></label>
    <%= form.email_field :email, class: 'form-control' %>
  </div>
  <div class='form-group'>
    <label for='user_last_name'><%= User.human_attribute_name(:last_name) %></label>
    <%= form.text_field :last_name, class: 'form-control' %>
  </div>
  <div class='form-group'>
    <label for='user_first_name'><%= User.human_attribute_name(:first_name) %></label>
    <%= form.text_field :first_name, class: 'form-control' %>
  </div>
  <%= form.file_field :user_image, class: 'form-control', id: 'js-common-img' %>
  <%= form.hidden_field :user_image_cache %>
  <div class='mt-3 mb-3'>
    <%= image_tag user.user_image.url, class: 'rounded-circle', id: 'js-img-prev', size: '100x100' %>
  </div>
  <div class='form-group'>
    <label for='user_role'><%= User.human_attribute_name(:role) %></label>
    <%= form.select :role, User.roles_i18n.keys.map { |k| [User.roles_i18n[k], k] }, class: 'form-control' %>
  </div>
  <%= form.submit t('.update'), class: 'btn btn-primary' %>
<% end %>