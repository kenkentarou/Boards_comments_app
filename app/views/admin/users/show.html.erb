<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <%= render 'shared/flash_message' %>
  <div class="container">
    <div class="row">
      <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
        <h1>ユーザー詳細</h1>
        <div class="text-right mb-3">
          <%= link_to '編集', edit_admin_user_path(@user.id), class: 'btn btn-success' %>
          <%= link_to '削除', admin_user_path(@user.id), class: 'btn btn-danger', data: {confirm: '本当に実行して大丈夫ですか?'}, method: :delete %>
        </div>
        <table class="table table-bordered bg-white">
          <tr>
            <th scope="row">Id</th>
            <td><%= @user.id %></td>
          </tr>
          <tr>
            <th scope="row">権限</th>
            <td><%= @user.role_i18n %></td>
          </tr>
          <tr>
            <th scope="row">氏名</th>
            <td><%= @user.last_name %><%= @user.first_name %></td>
          </tr>
          <tr>
            <th scope="row">プロフィール画像</th>
            <td><%= image_tag @user.user_image.url %></td>
          </tr>
          <tr>
            <th scope="row">作成日時</th>
            <td><%= l @user.created_at, format: :short %></td>
          </tr>
        </table>
      </div>
    </div>
  </div>
</div>