<% content_for(:title, 'ユーザーログイン') %>
<div class='container'>
  <div class='row'>
    <div class=' col-md-10 offset-md-1 col-lg-8 offset-lg-2'>
      <h1><%= t('.login') %></h1>
      <%= form_with(url: login_path, model: @user, local: true) do |f| %>
        <div class='form-group'>
          <%= f.label :email, User.human_attribute_name(:email) %>
          <%= f.text_field :email, class: 'form-control' %>
        </div>
        <div class='form-group'>
          <%= f.label :password, User.human_attribute_name(:password) %>
          <%= f.password_field :password, class: 'form-control' %>
        </div>
        <div class='actions'>
          <%= f.submit t('.login'), class: 'btn btn-primary' %>
        </div>
      <% end %>
      <div class='text-center'>
        <%= link_to auth_at_provider_path(provider: :facebook), class: "facebook-button" do %>
          <i class="fab fa-facebook-f">
          </i>
          Facebookログイン
        <% end %>
      </div>
      <div class='text-center'>
        <%= link_to t('.create_page'), new_user_path %>
        <%= link_to t('.password_forget'), new_password_reset_path %>
      </div>
    </div>
  </div>
</div>
