<% content_for :title do %>
  ユーザーログイン
<% end %>
<div class='container'>
  <div class='row'>
    <div class=' col-md-10 offset-md-1 col-lg-8 offset-lg-2'>
      <h1><%= t('.login') %></h1>
      <%= form_with(url: login_path, model: @user, local: true) do |form| %>
        <div class='form-group'>
          <label for='email'><%= User.human_attribute_name(:email) %></label>
          <%= form.text_field :email, class: 'form-control' %>
        </div>
        <div class='form-group'>
          <label for='password'><%= User.human_attribute_name(:password) %></label>
          <%= form.password_field :password, class: 'form-control'%>
        </div>
        <div class='actions'>
          <%= form.submit t('.login'), class: 'btn btn-primary'%>
        </div>
      <% end %>
      <div class='text-center'>
        <%= link_to t('.create_page'), new_user_path %>
        <%= link_to t('.password_forget'), '#' %>
      </div>
    </div>
  </div>
</div>
