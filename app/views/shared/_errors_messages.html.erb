<% if board %>
<ul>
  <% board.errors.full_messages.each do |message| %>
    <div class='alert alert-danger'>
      <li><%= message %></li>
    </div>
  <% end %>
</ul>
<% end %>

<% if user %>
  <ul>
    <% user.errors.full_messages.each do |message| %>
      <div class='alert alert-danger'>
        <li><%= message %></li>
      </div>
    <% end %>
  </ul>
<% end %>
