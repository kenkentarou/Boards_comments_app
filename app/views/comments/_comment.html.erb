<tr id="comment-<%= comment.id %>">
  <td style='width: 60px'>
    <%= image_tag comment.user.user_image.url, class: 'rounded-circle', size: '50x50' %>
  </td>
  <td>
    <h3 class='small'><%= comment.user.last_name %><%= comment.user.first_name %></h3>
    <!--    コメント部分-->
    <div id='js-comment-<%= comment.id %>'>
      <p><%= comment.body %></p>
    </div>
    <!--    フォーム部分-->
    <div style='display: none;' id='js-textarea-comment-box-<%= comment.id %>'>
      <textarea id='js-textarea-comment-<%= comment.id %>', class='form-control mb-1'><%= comment.body %></textarea>
      <button class='btn btn-light js-button-comment-update' data-comment-id='<%= comment.id %>'>更新</button>
      <button class='btn btn-success js-button-edit-comment-cancel' data-comment-id='<%= comment.id %>'>キャンセル</button>
    </div>
  </td>
  <!-- ボタン-->
  <% if current_user.own?(comment) %>
    <td class='action'>
      <ul class='list-inline justify-content-center' style='float: right;'>
        <li class='list-inline-item'>
          <button data-id='<%= comment.id %>' class='btn js-edit-comment-button'><i class='fas fa-edit text-primary'></i></button>
        </li>
        <li class='list-inline-item'>
          <%= link_to comment_path(comment.id), method: :delete, remote: true do %>
            <i class='fa fa-trash'></i>
          <% end %>
        </li>
      </ul>
    </td>
  <% end %>
</tr>