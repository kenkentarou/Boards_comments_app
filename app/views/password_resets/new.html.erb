<div class='container'>
  <div class='row'>
    <div class=' col-md-10 offset-md-1 col-lg-8 offset-lg-2'>
      <h1>パスワードリセット申請</h1>
      <%= form_with url: password_resets_path, local: true, method: :post do |form| %>
        <div class="field">
          <%= form.label :メールアドレス %>
          <%= form.text_field :email, class: 'form-control' %>
          <%= form.submit '送信', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>